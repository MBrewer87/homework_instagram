<div class="col-md-12">
  <div class="page-header">
    <h1> List of Photos </h1>
  </div>

  <div>
    <p> <a href="/new_photo_form" class="btn btn-primary"> Add a new photo! </a> </p>
  </div>
</div>


<div class="col-md-12">
  <table class="table table-hover">
    <tr>
      <th>Thumbnail</th>
      <th>Caption</th>
      <th colspan="3">Actions</th>
    </tr>
  <% @list_of_photos.each do |photo| %>
    <tr>
      <td>
        <img src="<%= photo.source %>" width="80">
      </td>
      <td>
        <%= photo.caption %>
      </td>
      <td>
        <a href="http://localhost:3000/photo_details/<%= photo.id %>" class="btn btn-primary">Show</a>
      </td>
      <td>
        <a href="http://localhost:3000/edit_photo_form/<%= photo.id %>" class="btn btn-warning">Edit</a>
      </td>
      <td>
        <a href="http://localhost:3000/delete_photo/<%= photo.id %>" class="btn btn-danger">Delete</a>
      </td>
    </tr>
  <% end %>
  </table>
</div>
