<div class="col-md-12">
  <h1> Edit Photo or Caption for Photo # <%= @photodeets.id %> </h1>
</div>

<div class="col-md-12">
  <form action="/update_photo/<%= @photodeets.id %>">
    <div>
      <label for="source">
        URL
      </label>
      <input type="text" id="the_source" name="the_source" value="<%= @photodeets.source %>">
    </div>

    <div>
      <label for="the_caption">
        Caption
      </label>
      <input type="text" id="the_caption" name="the_caption" value="<%= @photodeets.caption %>">
    </div>

    <div>
      <input type="submit" value="Update Photo" class="btn btn-primary">
    </div>
  </form>
</div>

